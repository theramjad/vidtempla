# YouTube OAuth (get from Google Cloud Console)
YOUTUBE_CLIENT_ID=YOUR_GOOGLE_OAUTH_CLIENT_ID
YOUTUBE_CLIENT_SECRET=YOUR_GOOGLE_OAUTH_CLIENT_SECRET
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback

# Encryption key for storing OAuth tokens (generate a random 32+ character string)
ENCRYPTION_KEY=YOUR_RANDOM_32_CHARACTER_ENCRYPTION_KEY

# RapidAPI (optional - for Twitter monitoring feature)
RAPID_API_KEY=YOUR_KEY_HERE

# Supabase
